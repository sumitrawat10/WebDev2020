<%- include('../partials/header.ejs') %>

<body class="text-center">
  <form class="form-signin" action="/subscribe" method="post">
    <img class="mb-4" src="images/brainvat.png" alt="" width="150" height="150">
    <h1 class="h3 mb-3 font-weight-normal">Your Brainvat Subscription</h1>
    <p>
      <i>Your subscription was <%= vars.edit == 1 ? "updated" : "created" %>.</i>
    </p>
    <label for="inputFirstName" class="sr-only">First Name</label>
    <input type="text" name="firstName" class="form-control top" value="<%= vars.firstName %>" required autofocus>
    <label for="inputLastName" class="sr-only">Last Name</label>
    <input type="text" name="lastName" class="form-control middle" value="<%= vars.lastName %>" required>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" name="email-ignore" class="form-control bottom" value="<%= vars.email %>" disabled>
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" name="unsubscribed" value="yes" <%= vars.status == "unsubscribed" ? "checked" : "" %>> Unsubscribe
        <input type="hidden" name="update_existing" value="<%= vars.update_existing ? 1 : 0 %>" />
        <input type="hidden" name="email" value="<%= vars.email %>" />
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2020 Brainvat Labs</p>
  </form>
</body>

<%- include('../partials/footer.ejs') %>
